<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr class="danger">
      <th>First name</th>
      <th>Last name</th>
      <th>License no</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.license_no %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_number %></td>
        <td><%= link_to 'Show', doctor, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' },  class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

